    .container
      h1 Raspberry Pi Interface
      .row.voffset
        .col-md-4
          div Lamp
        .col-md-4
          button.btn.btn-block.btn-lg.btn-primary#on On
        .col-md-4
          button.btn.btn-block.btn-lg.btn-danger#off Off
      .row.voffset
        .col-md-6
          div#temperature Temperature:
        .col-md-6
          div#humidity Humidity:
